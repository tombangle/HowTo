{
  "expo": {
    "name": "Dynamic Decision Tree Creator",
    "slug": "intuitive-flexible-pwa",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "intuitive-flexible-pwa",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,

    "platforms": ["ios", "android", "web"],

    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static"
      
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
        , "baseUrl": "/HowTo"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}